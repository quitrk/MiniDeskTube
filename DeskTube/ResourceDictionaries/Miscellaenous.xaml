<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type Path}" x:Key="LineStyle">
        <Setter Property="Data" Value="M0,84 L219,84"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Stroke" Value="{DynamicResource LightGrayBrush}"/>
    </Style>
    
    <Style TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="{DynamicResource DarkGrayBrush}"/>
    </Style>
</ResourceDictionary>